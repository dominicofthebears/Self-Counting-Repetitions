<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:padding="16dp"
        tools:context=".MainActivity"
        android:id="@+id/MainLayout">

    <!-- Header Section -->
    <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Squat assistant!\n\nSelect the parameters value"
            android:textSize="24sp"
            android:textColor="@color/headerTextColor"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="16dp" />

    <!-- Main Content Section -->
    <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="389dp"
            android:layout_height="595dp"
            android:orientation="vertical"
            android:layout_below="@id/header"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_background"
            android:padding="16dp">

        <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of repetitions"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="sans-serif-light" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumber1"
                android:textColor="@color/textColorPrimary"
                android:layout_marginBottom="20dp" />

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of series"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="sans-serif-light" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumber2"
                android:textColor="@color/textColorPrimary"
                android:layout_marginBottom="20dp" />

        <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes of rest"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="sans-serif-light" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumber3"
                android:textColor="@color/textColorPrimary"
                android:layout_marginBottom="20dp" />

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seconds of rest"
                android:textSize="18sp"
                android:textColor="@color/textColorPrimary"
                android:fontFamily="sans-serif-light" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextNumber4"
                android:textColor="@color/textColorPrimary"
                android:layout_marginBottom="20dp" />

        <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:backgroundTint="@color/buttonColor"
                android:textColor="@color/buttonTextColor"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Footer Section -->
    <TextView
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/footerTextColor"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp" />
</RelativeLayout>
